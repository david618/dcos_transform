{
  "id": "/kafka-transform-kafka",
  "cmd": "$MESOS_SANDBOX/jre1.8.0_91/bin/java -cp $MESOS_SANDBOX/rtsink.jar com.esri.rtsink.KafkaTransformKafka confluent-kafka simFile group1 com.esri.rtsink.TransformGeotagSimFile simFileTrans $PORT0",
  "cpus": 2,
  "mem": 4096,
  "disk": 0,
  "instances": 1,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "portDefinitions": [
    {
      "port": 10002,
      "protocol": "tcp",
      "labels": {}
    }
  ],
  "uris": [
    "http://m1/apps/jre-8u91-linux-x64.tar.gz",
    "http://m1/apps/rtsink.tgz",
    "http://m1/apps/rtlib.tgz"
  ],
  "fetch": [
    {
      "uri": "http://m1/apps/jre-8u91-linux-x64.tar.gz",
      "extract": true,
      "executable": false,
      "cache": false
    },
    {
      "uri": "http://m1/apps/rtsink.tgz",
      "extract": true,
      "executable": false,
      "cache": false
    },
    {
      "uri": "http://m1/apps/rtlib.tgz",
      "extract": true,
      "executable": false,
      "cache": false
    }
  ]
}
